<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragments.RightAnswerFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/rightmark"
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:layout_centerInParent="true"
                android:contentDescription="@string/right_answer"
                android:padding="7dp"
                android:src="@drawable/rightmark" />

            <TextView
                android:id="@+id/rightanswerTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rightmark"
                android:layout_alignStart="@+id/rightmark"
                android:layout_alignEnd="@+id/rightmark"
                android:lines="1"
                android:text="@string/right_answer"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/newproblembtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rightanswerTextview"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/btnbackground"
                android:gravity="center"
                android:padding="22dp"
                android:text="@string/new_problem" />

        </RelativeLayout>
    </FrameLayout>
</layout>